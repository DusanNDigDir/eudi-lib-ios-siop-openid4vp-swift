# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  desc "Runs unit tests"
  lane :tests do
    params = { 
      package_path: '.', 
      scheme: 'OpenID4VP', 
      devices: ['iPhone 14'], 
      result_bundle: true
    }

    if ENV['CI'] 
      params[:xcargs] = "-skipPackagePluginValidation"
    end

    run_tests(params)
  end

  desc "Just builds the package"
  lane :just_build do
    xcodebuild(
      scheme: "OpenID4VP",
      destination: "platform=iOS Simulator,id=8713DBBD-6CB5-47ED-99D9-2B1F496A828B"
    )
  end
end
